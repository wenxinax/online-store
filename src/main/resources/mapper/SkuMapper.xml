<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlinestore.mapper.SkuMapper">

    <insert id="insertSku" parameterType="com.example.onlinestore.entity.SkuEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO skus (item_id, title, images, created_at, updated_at)
        VALUES (#{itemId}, #{title}, #{images}, #{createdAt}, #{updatedAt})
    </insert>
    
    <select id="findById" resultType="com.example.onlinestore.entity.SkuEntity">
        SELECT * FROM skus WHERE id = #{id}
    </select>
    
    <select id="findByItemId" resultType="com.example.onlinestore.entity.SkuEntity">
        SELECT * FROM skus WHERE item_id = #{itemId}
    </select>
    
    <update id="updateSku" parameterType="com.example.onlinestore.entity.SkuEntity">
        UPDATE skus 
        SET item_id = #{itemId},
            title = #{title},
            images = #{images},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <delete id="deleteSku">
        DELETE FROM skus WHERE id = #{id}
    </delete>
</mapper> 