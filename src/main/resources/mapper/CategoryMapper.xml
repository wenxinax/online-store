<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlinestore.mapper.CategoryMapper">

    <resultMap id="categoryResultMap" type="com.example.onlinestore.entity.CategoryEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="parentId" column="parent_id"/>
        <result property="visible" column="visible"/>
        <result property="status" column="status"/>
        <result property="weight" column="weight"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <sql id="Base_Column">
        id, `name`, `description`, `parent_id`, `visible`,`status`, `weight`,created_at, updated_at
    </sql>
    <select id="findAllCategories" resultMap="categoryResultMap">
        SELECT
            <include refid="Base_Column"/>
        FROM category
        ORDER BY id DESC
            LIMIT #{offset}, #{limit}
    </select>

</mapper>